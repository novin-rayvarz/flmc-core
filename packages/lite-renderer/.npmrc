# Set URL for your scoped packages.
# For example package with name `@foo/bar` will use this URL for download
npm config set @rayflmc:registry https://gitlab.com/api/v4/packages/npm/

# Add the token for the scoped packages URL. This will allow you to download
# `@foo/` packages from private projects.
npm config set '//gitlab.com/api/v4/packages/npm/:_authToken' "K6r7gTZHdqHyn_Xvqu9U"

# Add token for uploading to the registry. Replace <your_project_id>
# with the project you want your package to be uploaded to.
npm config set '//gitlab.com/api/v4/projects/20676714/packages/npm/:_authToken' "K6r7gTZHdqHyn_Xvqu9U"